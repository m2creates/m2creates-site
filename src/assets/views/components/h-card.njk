{#
  NOTES
  @ref h-card https://microformats.org/wiki/h-card
  @ref microformats2 http://microformats.org/wiki/microformats2
  @ref me http://microformats.org/wiki/rel-me
  @ref IndieAuth https://indieauth.com/setup
  @ref validate/test https://indiewebify.me/validate-h-card/
#}

<div class="h-card">
  
  <data class="fn p-name" value="{{ site.author.name }}"></data>
  <data class="nickname p-nickname" value="m2creates"></data>
  <data class="url u-url u-uid" value="{{ site.meta.url | safe }}"></data>
  <data class="photo u-photo" value="{{ site.meta.url | safe }}{{ site.author.avatar }}"></data>
  <data class="logo u-logo" value="{{ site.meta.url | safe }}{{ site.brand.logo }}"></data>
  <data class="u-pronoun" value="{{ site.author.pronouns.link | safe }}"></data>
  <data class="p-note" value="{{ site.author.bio }} ({{ site.author.pronouns.text }})"></data>

  <ul class="flex flex-wrap justify-center">
    {% for link in site.social %}
    <li class="px-2">
      <a href="{{ link.url | safe }}" title="{{ link.network }}" aria-label="{{ link.network }}" rel="me noopener noreferrer" target="_blank" class="inline-block p-2 url u-url">
        <svg class="block" role="img" aria-hidden="true" width="18" height="18">
          <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/images/icons/icon-library.svg#{{ link.network | lower }}"></use>
        </svg>
      </a>
    </li>
    {%- endfor %}
  </ul>

</div>
